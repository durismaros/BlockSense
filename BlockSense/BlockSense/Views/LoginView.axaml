<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BlockSense.LoginView">

	<Panel>
		<!--MainApplicationIcon-->
		<Panel 
			Width="400"
			HorizontalAlignment="Left">
			<Image
				Width="250"
				Margin="0,0,0,0"
				Source="avares://BlockSense/Assets/mainWindowIcon.png"/>
		</Panel>
		
		
		<StackPanel
			Margin="30,40,30,30"
			Width="400"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Spacing="15"
			KeyDown="OnKeyDown">
			
			<!--Login Header-->
			<Panel
				Width="300"
				Height="40">
				<Border
					Width="300"
					Height="40"
					Background="#6D4C41"
					CornerRadius="20"
					BoxShadow="0 2 8 0 #30000000"/>

				<!--Return to the Home page Button-->
				<Button
					Name="HomeButton"
					Width="40"
					Height="30"
					Margin="6 0 0 0"
					CornerRadius="20"
					Background="#5A3D34"
					Click="HomeClick">
					
					<Button.Styles>
						<Style Selector="Button:pointerover ContentPresenter">
							<Setter Property="Background" Value="#4A322A" />
						</Style>
					</Button.Styles>

					<Image
						Height="30"
						Source="avares://BlockSense/Assets/backArrow.png"/>
				</Button>
				
				<TextBlock
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontSize="18"
					FontWeight="SemiBold"
					Foreground="#E6C8A0"
					Text="Log In"/>
			</Panel>

			<!--Separator-->
			<Border
				Classes="DefaultSeparator"
				Width="280"/>

			<!--User login information entries-->
			
			<TextBox
				Name="loginLogin"
				Width="320"
				Height="20"
				Watermark="username or email address*"
				Margin="0,10,0,0"/>
			
			<TextBox
				Name="passwordLogin"
				Width="320"
				Height="20"
				Watermark="password*"
				PasswordChar="â€¢"
				FontFamily="{DynamicResource Roboto}"
				FontWeight="Bold"/>

			
			<!--Main login Button-->
			<Button
				Classes="DefaultDarkBrown"
				Name="LoginButton"
				Margin="0,10,0,0"
				Click="LoginClick">
				
				<TextBlock
					Text="Login"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontWeight="Medium"
					Foreground="#E6C8A0"/>
				
			</Button>
			
			<!--System Output-->
			<Border
				Name="loginTextBorder"
				Width="250"
				Height="20"
				Margin="0,-15,0,0"
				Background="#5D3F36"
				CornerRadius="2,2,10,10"
				IsVisible="False">
				<TextBlock
					Name="loginText"
					Foreground="Black"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontStyle="Italic"
					FontWeight="SemiBold"
					FontSize="12"/>
			</Border>

			<!--Reset password Button-->
			<Button
				Classes="DefaultLightBrown"
				Name="resetButton"
				Width="210"
				Height="30"
				CornerRadius="12"
				Margin="0,-5,0,0"
				Click="ResetPasswordClick">

				<TextBlock
					Name="resetButtonText"
					Text="forgot your password?"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontWeight="SemiBold"
					Foreground="#5D3F36"/>

			</Button>
			
		</StackPanel>
	</Panel>
	
</UserControl>
