<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BlockSense.UserProfile">
	
	<UserControl.Styles>
		<!-- Remove hover effect from MenuItem -->
		<Style Selector="MenuItem:pointerover">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderBrush" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
		</Style>
	</UserControl.Styles>
	
	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					BackgroundSource="Digger"
					TintColor="Yellow"
					TintOpacity="0.2"
					MaterialOpacity="0.8" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>
		
		<Panel
			Width="400"
			HorizontalAlignment="Left"
			PointerPressed="PfpUploadClick">
			<Panel.ContextMenu>
				<ContextMenu Width="100"
							 CornerRadius="20"
							 Padding="0 0 -50 0"
							 Background="White">
					<MenuItem Header="Set default"
							  Click="SetDefaultClick"
							  Foreground="Gray"
							  FontWeight="Medium"
							  FontFamily="{DynamicResource Montserrat}"
							  Padding="10,5"/>
				</ContextMenu>
			</Panel.ContextMenu>
			<Border
				Name="ProfilePictureOutline"
				Width="230"
				Height="230"
				Margin="0,0,0,0"
				CornerRadius="130"
				BorderBrush="#D2B48C"
				BorderThickness="5">
				<Border
					Name="ProfilePictureBorder"
					CornerRadius="130"
					ClipToBounds="True">
					<Image
						Name="ProfilePicture"
						Source="avares://BlockSense/Assets/defaultPfp.png"
						Stretch="UniformToFill"
						StretchDirection="Both"/>
				</Border>
			</Border>
		</Panel>
		

		<StackPanel
			Margin="30, 40, 30, 30"
			Width="400"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Spacing="15">
			
			
			<Grid
				Width="300"
				Height="40">
				<Border
					Width="300"
					Height="40"
					Background="#6F4E37"
					CornerRadius="20"/>

				<!--Return to the Home page Button-->
				<Button
					Name="HomeButton"
					Width="40"
					Height="30"
					Margin="5 0 0 0"
					CornerRadius="20"
					Background="#5C4033"
					Click="HomeClick">

					<Button.Styles>
						<Style Selector="Button:pointerover /template/ ContentPresenter">
							<Setter Property="Background" Value="#4F352B" />
						</Style>
					</Button.Styles>

					<Image
						Height="30"
						Source="avares://BlockSense/Assets/backArrow.png"/>
				</Button>

				<TextBlock
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontSize="18"
					FontWeight="Bold"
					Foreground="#F5DEB3"
					Text="User Profile"/>
			</Grid>


			<Border
				Width="320"
				Height="1"
				Background="#C2B280"
				CornerRadius="100"
				BoxShadow="5 5 10 0 Black"/>

			<Border
				Width="300"
				Height="170"
				Margin="0 10 0 10"
				CornerRadius="20,20,30,30"
				Background="#B99978"
				BorderBrush="#D2B48C"
				BorderThickness="2"
				BoxShadow="5 5 20 0 #343434">
				<StackPanel
					Margin="15"
					Spacing="5">
					<TextBlock
						Name="uid"
						Foreground="#6F4E37"
						FontWeight="Medium">
						uid: <Span
					   Name="uid_span"
					   Foreground="#28282B"
					   FontWeight="SemiBold"
					   FontSize="13"></Span>
					</TextBlock>

					<TextBlock
						Name="username"
						Foreground="#6F4E37"
						FontWeight="Medium">
						username: <Span
				  Name="username_span"
				  Foreground="#28282B"
				  FontWeight="SemiBold"
				  FontSize="13"></Span>
					</TextBlock>

					<TextBlock
						Name="email"
						Foreground="#6F4E37"
						FontWeight="Medium">
						email: <Span
					 Name="email_span"
					 Foreground="#28282B"
					 FontWeight="SemiBold"
					 FontSize="13"></Span>
					</TextBlock>

					<TextBlock
						Name="type"
						Foreground="#6F4E37"
						FontWeight="Medium">
						type: <Span
					  Name="type_span"
					  Foreground="#28282B"
					  FontWeight="SemiBold"
					  FontSize="13"></Span>
					</TextBlock>

					<TextBlock
						Name="creationDate"
						Foreground="#6F4E37"
						FontWeight="Medium">
						creation date: <Span
							Name="creationDate_span"
							Foreground="#28282B"
							FontWeight="SemiBold"
							FontSize="13"></Span>
					</TextBlock>

					<TextBlock
						Name="invitingUser"
						Foreground="#6F4E37"
						FontWeight="Medium">
						invited by: <Span
				Name="invitingUser_span"
				Foreground="#28282B"
				FontWeight="Bold"
				FontSize="13"
				FontStyle="Italic"></Span>
					</TextBlock>
				</StackPanel>
			</Border>
			<Button
				Name="logoutButton"
				Width="150"
				Height="29"
				HorizontalAlignment="Center"
				CornerRadius="10"
				Margin="0,-5,0,0"
				Background="#F5DEB3"
				Click="LogoutClick">
				<TextBlock
					Name="logoutButtonText"
					Text="Log Out"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontWeight="SemiBold"
					Foreground="#6F4E37"/>
				<Button.Styles>
					<Style Selector="Button:pointerover /template/ ContentPresenter">
						<Setter Property="Background" Value="#D2B48C" />
					</Style>
				</Button.Styles>
			</Button>
		</StackPanel>

		<Panel
			Width="800"
			Height="50"
			Background="Transparent"
			VerticalAlignment="Bottom">
			<StackPanel
				Orientation="Horizontal"
				Spacing="100"
				Margin="150 0 0 10">
				<Button
					Width="50">
				</Button>
				<Button
					Width="50">
				</Button>
				<Button
					Width="50">
				</Button>
				<Button
					Width="50">
				</Button>
			</StackPanel>
		</Panel>
	</Panel>
</UserControl>
