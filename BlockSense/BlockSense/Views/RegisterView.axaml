<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BlockSense.RegisterView">

	<Panel>

		<!--MainApplicationIcon-->
		<Panel
			Width="400"
			HorizontalAlignment="Left">
			<Image
				Width="250"
				Margin="0,0,0,0"
				Source="avares://BlockSense/Assets/mainWindowIcon.png"/>
		</Panel>
		
		
		<StackPanel
			Margin="30, 40, 30, 30"
			Width="400"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Spacing="15"
			KeyDown="OnKeyDown">

			<!--Register Header-->
			<Panel
				Width="300"
				Height="40">
				<Border
					Width="300"
					Height="40"
					Background="#E6C8A0"
					CornerRadius="20"
					BoxShadow="0 2 8 0 #30000000"/>

				<!--Return to the Home page Button-->
				<Button
					Name="HomeButton"
					Width="40"
					Height="30"
					Margin="6 0 0 0"
					CornerRadius="20"
					Background="#D4B38C"
					Click="HomeClick">

					<Button.Styles>
						<Style Selector="Button:pointerover ContentPresenter">
							<Setter Property="Background" Value="#B99978" />
						</Style>
					</Button.Styles>
					
					<Image
						Height="30"
						Source="avares://BlockSense/Assets/backArrow.png"/>
				</Button>
				
				<TextBlock
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontSize="18"
					FontWeight="SemiBold"
					Foreground="#6D4C41"
					Text="Register"/>
			</Panel>

			<!--Separator-->
			<Border
				Classes="DefaultSeparator"
				Width="280"/>

			<!--User register information entries-->
		
			<TextBox
				Name="usernameRegister"
				Width="320"
				Height="20"
				Watermark="username*"
				Margin="0,10,0,0">
			</TextBox>

			<TextBox
				Name="emailRegister"
				Width="320"
				Height="20"
				Watermark="email address*"/>
			
			<TextBox
				Name="passwordRegister"
				Width="320"
				Height="20"
				Watermark="password*"
				PasswordChar="•"
				FontFamily="{DynamicResource Roboto}"
				FontWeight="Bold"/>
			
			<TextBox
				Name="passwordConfirmRegister"
				Width="320"
				Height="20"
				Watermark="re-enter password*"
				PasswordChar="•"
				FontFamily="{DynamicResource Roboto}"
				FontWeight="Bold"/>
			
			<TextBox
				Name="invitationCodeRegister"
				Width="320"
				Height="20"
				Watermark="invitation code*"
				FontWeight="Bold"/>
			
			<!--Main register Button-->
			<Button
				Classes="DefaultLightBrown"
				Name="RegisterButton"
				Click="RegisterClick">
				<TextBlock
					Text="Register"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontWeight="Medium"
					Foreground="#5D3F36"/>
			</Button>

			<!--System Output-->
			<Border
				Name="registerTextBorder"
				Width="250"
				Height="20"
				Margin="0,-15,0,0"
				Background="#D4B38C"
				CornerRadius="2,2,10,10"
				IsVisible="False">
				<TextBlock
					Name="registerText"
					Foreground="Black"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontStyle="Italic"
					FontWeight="SemiBold"
					FontSize="12"/>
			</Border>
			
		</StackPanel>
	</Panel>

</UserControl>
