<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BlockSense.BackupView">
	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					BackgroundSource="Digger"
					TintColor="Yellow"
					TintOpacity="0.2"
					MaterialOpacity="0.8" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<Panel
			Width="400"
			HorizontalAlignment="Left">
			<Image
				Width="250"
				VerticalAlignment="Center"
				Source="avares://BlockSense/Assets/anonymous.png"/>
		</Panel>

		<StackPanel
			Margin="30"
			Width="400"
			HorizontalAlignment="Right"
			VerticalAlignment="Center"
			Spacing="15">
			
			<TextBlock
				HorizontalAlignment="Center"
				FontSize="20"
				FontWeight="ExtraBold"
				Foreground="#353935"
				Text="Back up your secret phrase"/>
			
			<Border
				Width="300"
				Height="1"
				Background="#C2B280"
				CornerRadius="100"
				BoxShadow="5 5 10 0 Black"/>

			<TextBlock
				Margin="0,0,0,-10"
				Width="300"
				Height="20"
				Foreground="#343434"
				FontSize="15"
				FontWeight="Bold"
				LineSpacing="10"
				TextAlignment="Center"
				Text="Protect your assets by backing up"/>

			<TextBlock
				
				Width="300"
				Height="20"
				Foreground="#343434"
				FontSize="15"
				FontWeight="Bold"
				LineSpacing="10"
				TextAlignment="Center"
				Text="the seed phrase first"/>

			<Button
				Classes="DefaultDarkBrown"
				Name="manualBackupButton"
				Width="275"
				Height="35"
				Margin="0,20,0,0"
				HorizontalAlignment="Center"
				CornerRadius="15"
				Background="#6F4E37"
				Click="ManualBackupClick">
				<TextBlock
					Text="Manual Backup"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontWeight="SemiBold"
					Foreground="#F5DEB3"/>


			</Button>

			<Button
					Classes="DefaultLightBrown"
					Name="remoteBackupButton"
					Width="275"
					Height="35"
					HorizontalAlignment="Center"
					CornerRadius="15"
					Background="#F5DEB3"
					Click="BackupLaterClick">
				<TextBlock
					Text="Back up later . . ."
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontWeight="SemiBold"
					Foreground="#6F4E37"/>
			</Button>

		</StackPanel>

		</Panel>
</UserControl>
