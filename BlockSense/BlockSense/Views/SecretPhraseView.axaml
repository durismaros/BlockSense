<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BlockSense.SecretPhraseView">
	<Panel>
		<Panel
			Name="MainPanel"
			Height="420"
			VerticalAlignment="Bottom"
			Background="Transparent">
			
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Spacing="18">


				<TextBlock
					HorizontalAlignment="Center"
					FontSize="36"
					Foreground="#2A2118"
					Text="Manual Backup"/>

				<!--Separator-->
				<Border
					Classes="DefaultSeparator"
					Width="120"
					Margin="0 0 0 10"/>

				<!--Motivational text-->
				<TextBlock
					Width="340"
					Foreground="#2A2118"
					FontSize="14"
					FontWeight="SemiBold"
					TextAlignment="Center"
					LineHeight="22"
					Opacity="0.9"
					TextWrapping="Wrap"
					Text="Never share your secret phrase with anyone, store it in a safe, private place"/>
				

				<UniformGrid
					Name="PhraseGrid"
					Rows="2"
					Columns="6"
					Width="650"
					Height="150"
					Margin="0,10,0,10">
					<!--Words are added automatically-->
				</UniformGrid>

				<Button
					Classes="DefaultDarkBrown"
					Name="ContinueButton"
					Width="240">

					<TextBlock
						Text="Continue"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						FontWeight="Medium"
						Foreground="#E6C8A0"/>
				</Button>

			</StackPanel>
		</Panel>

		<Border
			Name="SlidePanel"
			CornerRadius="20,20,0,0"
			Width="700"
			Height="250"
			Background="#D4C9A8"
			VerticalAlignment="Bottom">
			<StackPanel
				Width="600"
				Height="200"
				Spacing="14">

				<CheckBox
					Name="CheckBox1"
					HorizontalAlignment="Left"
					IsCheckedChanged="OnCheckboxChanged">
					<TextBlock
						Text="BlockSense does not store or access this phrase"
						FontWeight="Medium"
						FontStyle="Italic"/>
				</CheckBox>

				<CheckBox
					Name="CheckBox2"
					HorizontalAlignment="Left"
					IsCheckedChanged="OnCheckboxChanged">
					<TextBlock
						Text="Do not record this phrase digitally, including screenshots or unencrypted text"
						FontWeight="Medium"
						FontStyle="Italic"/>
				</CheckBox>

				<CheckBox
					Name="CheckBox3"
					HorizontalAlignment="Left"
					Margin="0,0,0,18"
					IsCheckedChanged="OnCheckboxChanged">
					<TextBlock
						Text="Keep this phrase private and securely stored offline"
						FontWeight="Medium"
						FontStyle="Italic"/>
				</CheckBox>

				<Button
					Classes="DefaultDarkBrown"
					Name="SubmitButton"
					Width="240"
					IsEnabled="False"
					Click="FinishClick">

					<TextBlock
						Text="Finish"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						FontWeight="Medium"
						Foreground="#E6C8A0"/>
				</Button>
			</StackPanel>
		</Border>
	</Panel>
</UserControl>