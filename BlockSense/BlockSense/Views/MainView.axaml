<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BlockSense.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BlockSense.Views.MainView"
             x:DataType="vm:MainViewModel">

	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					BackgroundSource="Digger"
					TintColor="Yellow"
					TintOpacity="0.2"
					MaterialOpacity="0.8" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<!--MainApplicationIcon-->
		<Panel
			Width="400"
			HorizontalAlignment="Left">
			<Image
				Width="250"
				Source="avares://BlockSense/Assets/mainWindowIcon.png"/>
		</Panel>
		
		<StackPanel
			Margin="30"
			Width="400"
			HorizontalAlignment="Right"
			VerticalAlignment="Center"
			Spacing="15">

			<!--Application header-->
			<TextBlock
				HorizontalAlignment="Center"
				FontSize="40"
				FontWeight="Bold"
				Foreground="#353935">
				Block<Span Foreground="#28282B">Sense</Span>
			</TextBlock>
			
			<Border
				Width="300"
				Height="1"
				Background="#C2B280"
				CornerRadius="100"
				BoxShadow="5 5 10 0 Black"/>

			<!--Motivational text-->
			<TextBlock
				Margin="0,0,0,-10"
				Width="300"
				Height="20"
				Foreground="#343434"
				FontSize="15"
				FontWeight="Heavy"
				TextAlignment="Center"
				Text="Manage your crypto assets"/>
			
			<TextBlock
				Width="300"
				Height="20"
				Foreground="#343434"
				FontSize="15"
				FontWeight="Heavy"
				Text="easily and securely"
				TextAlignment="Center"/>
			
			
			<Border
				Width="300"
				Height="1"
				Background="#C2B280"
				CornerRadius="100"
				BoxShadow="5 5 10 0 Black"/>

			<!--Login Button-->
			<Button
				Classes="DefaultDarkBrown"
				Name="loginButton"
				Width="275"
				Height="35"
				Margin="0,20,0,0"
				HorizontalAlignment="Center"
				CornerRadius="15"
				Background="#6F4E37"
				Click="LoginButton">
				
				<TextBlock
					Text="Login"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontWeight="SemiBold"
					Foreground="#F5DEB3"/>

			</Button>

			<!--Register Button-->
			<Button
					Classes="DefaultLightBrown"
					Name="registerButton"
					Width="275"
					Height="35"
					HorizontalAlignment="Center"
					CornerRadius="15"
					Background="#F5DEB3"
					Click="RegisterButton">
				<TextBlock
					Text="Register"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontWeight="SemiBold"
					Foreground="#6F4E37"/>
			</Button>
			
		</StackPanel>
	</Panel>
	
</UserControl>
