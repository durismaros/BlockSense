<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BlockSense.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
		<FluentTheme />
		<StyleInclude Source="/Assets/AppDefaultStyles.axaml"/>
	</Application.Styles>
	<Application.Resources>
		<FontFamily x:Key="Montserrat">
			avares://BlockSense/Assets/Fonts/Montserrat#Montserrat
		</FontFamily>
		<FontFamily x:Key="Roboto">
			avares://BlockSense/Assets/Fonts/Roboto#Roboto
		</FontFamily>
		<FontFamily x:Key="Pacifico">
			avares://BlockSense/Assets/Fonts/Pacifico#Pacifico
		</FontFamily>
	</Application.Resources>
</Application>
